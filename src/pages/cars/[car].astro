---
import { cars } from "../../data/cars.astro";

export async function getStaticPaths() {
  return cars.map((car) => ({
    params: { car: car.id.toString() },
    props: { car },
  }));
}

const { car } = Astro.props;
---

<div>
  <h1>{car.brand} {car.model}</h1>
  <div class="text-sm text-neutral-500">{car.variant}</div>
  <div class="mt-4">
    <p>Year: {car.year}</p>
    <p>Mileage: {car.milage} km</p>
    <p>Fuel Type: {car.fuelType}</p>
    <p>Transmission: {car.transmission}</p>
    <p class="text-xl font-semibold mt-4">Price: ${car.price}</p>
  </div>
  <div class="mt-6 grid grid-cols-2 gap-4">
    {
      car.image.map((img) => (
        <img
          src={img.src}
          alt={img.alt}
          class="w-full h-48 object-cover rounded-lg"
        />
      ))
    }
  </div>
</div>
